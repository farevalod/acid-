<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-2">
		<h4>Categorias</h4>
		<% Category.all.each do |cat| %>
			<div class="cat" style="line-height:28px">
				<%= link_to cat.name, cat %>
			</div>
		<% end %>

	</div>
	<div class="col-md-10">
		<div class="container">
    <% @products.each_with_index do |product,idx| %>
		<% if idx%3 == 0 %>
			<div class="row" style="margin-bottom:30px">
		<% end %>
		<div class="col-md-3">
			<%= link_to product do %>
			<%= image_tag "http://placehold.it/220x220", size: "220x220" %>
			<h3><%= product.name.titleize %></h3>
			<span class="price" style="font-size:16px;font-weight:700;line-height:20px;color:#e62">US $<%= product.price %><small style="color:#aaa;font-size:12px"> / unidad</small></span>
				<%= link_to product_path(product)+"/add", :method => :post do%>
					<span style="padding-top:30px;float:right;margin-right:45px">
						<i class="fa fa-cart-plus" aria-hidden="true"></i>
						Agregar al carro
					</span>
				<% end %>
			<% end %>
	    </div>
   		<% if idx%3 == 2 %>
			</div>
		<% end %>
	 <% end %>
	</div>
	</div>

<br>
</div>
<hr>
<div class="row">
<div class="col-md-offset-2 col-md-4">
<div class="row">
<h4>Importar Productos</h4>

<%= form_tag import_products_path, multipart: true do %>
	<%= file_field_tag :file, required: true %>
	<br/>
	<%= submit_tag "Importar" %>
<% end %>

<hr>
</div>
<div class="row">
<h4>
	<%= link_to 'Nuevo Producto', new_product_path %>
</h4>
</div>
</div>
