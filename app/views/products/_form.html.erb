<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, required: true, class: "form-control", style: "width:300px" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Precio" %>
    <%= f.text_field :price, required: true, class: "form-control", style: "width:100px" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Descripcion" %>
    <%= f.text_area :description, class: "form-control", rows: 3, style: "width:600px" %>
  </div>

  <div class="form-group">
    <%= f.label :categories, "Categorias" %>
	<br/>
	<%= f.select :category_ids, options_for_select(Category.all.collect {|c| [c.name, c.id]}), {}, {:multiple => true} %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar Producto"%>
  </div>
<% end %>
