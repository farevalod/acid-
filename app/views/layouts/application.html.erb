<!DOCTYPE html>
<html>
  <head>
    <title>AcidMiniEcommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<div style="margin-left:500px">
		<%= link_to "("+current_user.carts.last.products.count.to_s+")", current_user.carts.last %>
	</div>
    <%= yield %>
  </body>
</html>
