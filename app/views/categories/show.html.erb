<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-2">
		<h4>Categorias</h4>
		<% Category.all.each do |cat| %>
			<div class="cat" style="line-height:28px">
				<% if cat.id == @category.id %>
					<strong>
					<%= link_to cat.name, cat %>
					</strong>
				<% else %>
					<%= link_to cat.name, cat %>
				<% end %>
			</div>
		<% end %>

	</div>
	<div class="col-md-10">
		<div class="container">
    <% @category.products.each do |product| %>
		<div class="col-md-3">
			<%= link_to product do %>
			<%= image_tag "http://placehold.it/220x220", size: "220x220" %>
			<h3><%= product.name %></h3>
			<span class="price" style="font-size:16px;font-weight:700;line-height:20px;color:#e62">US $<%= product.price %></span>
				<%= link_to product_path(product)+"/add", :method => :post do%>
					<span style="padding-top:45px;float:right;margin-right:45px">
						<i class="fa fa-cart-plus" aria-hidden="true"></i>
						Agregar al carro
					</span>
				<% end %>
			<% end %>
	    </div>
    <% end %>
	</div>
	</div>
</div>
